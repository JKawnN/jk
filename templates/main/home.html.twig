{% extends 'base.html.twig' %}

{% block title %}JKawn{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
  <section class="py-5 text-center container white-to-dark">
    <div class="row py-lg-7">
      <div class="col-lg-9 col-md-8 mx-auto">
        <h1 class="fw-light text-dark-to-white">JKawn's Website</h1>
        <h6 class="fw-light text-dark-to-white">Updates Ã  suivre :</h2>
        <ul class="list-group">
          <li class="list-group-item fw-light white-to-dark text-dark-to-white">Temps des joueurs par map trackmania</li>
          <li class="list-group-item fw-light white-to-dark text-dark-to-white">Comptes sur le site</li>
          <li class="list-group-item fw-light white-to-dark text-dark-to-white">Utiliser l'API de Riot Games pour faires des statistiques par joueur</li>
        </ul>
        <p>
          <a href="#" class="btn btn-primary my-2">Main call to action</a>
        </p>
      </div>
    </div>
  </section>
  
  <div class="album py-5 bg-light border-top-0">
    <div class="container-fluid pages-album">
      <div class="row justify-content-center">
          {% for post in posts %}
            <div class="card border-primary col-4 p-0 m-1" style="max-width: 20rem;">
              <a href="{{ post.route }}">            
                <img src="{{ asset('/assets/images/articles_images/' ~ post.image) }}" class="d-block user-select-none" width="100%" height="300" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                </img>
              </a>
              <div class="card-body p-2">
                <h4 class="card-title text-dark-to-white">{{ post.title }}</h4>
                <p class="card-text text-dark-to-white">{{ post.description }}</p>
                <div class="btn-group">
                  <a href="{{ post.route }}">
                    <button  type="button" class="btn btn-sm btn-outline-primary text-dark-to-white">Voir</button>  
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
      </div>
    </div>
  </div>
</main>
{% endblock %}
